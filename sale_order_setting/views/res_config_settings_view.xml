<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sale_order_setting" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.order.setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div/field[@name='group_proforma_sales']" position="after">
                <div class="o_setting_right_pane">
                    <br/>
                    <div class="row mt16">
                        <br/>
                        <label for="customer_id" string="Customer"/>
                        <field name="customer_id" class="oe_inline"/>

                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>