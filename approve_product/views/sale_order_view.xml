<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_order_form_inherited_approve_product" model="ir.ui.view">
        <field name="name">view.order.form.inherited.approve.product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                 <field name="zero_stock_approval"/>
            </field>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ["|",('zero_stock_approval' ,'=', False),("state","=","sale")]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="group_sale_manager_group_admin" model="ir.ui.view">
        <field name="name">group.sale.manager.group.admin</field>
        <field name="model">sale.order</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="arch" type="xml">
            <field name='zero_stock_approval' position="attributes">
                <attribute name="readonly">False</attribute>
            </field>
        </field>
    </record>

    <record id="group_sale_salesman_group_user" model="ir.ui.view">
        <field name="name">group_sale_salesman_group_user</field>
        <field name="model">sale.order</field>
        <field name="priority">19</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
        <field name="arch" type="xml">
            <field name='zero_stock_approval' position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
        </field>
    </record>

</odoo>