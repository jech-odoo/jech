<odoo>
    <data>
        <record id="quality_alert_view_form_obs" model="ir.ui.view">
            <field name="name">quality.alert.form.obs</field>
            <field name="model">quality.alert</field>
            <field name="inherit_id" ref="quality_control.quality_alert_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_id']" position="after">
                    <field name="representative_id"
                    attrs="{'invisible': [('picking_id', '=', False)], 'readonly': [('picking_id', '!=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>