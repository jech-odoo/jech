<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_view_form_asph" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="replace">
                <group style="width: 104% !important;">
                    <field name="narration" nolabel="1"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="reseller_id" force_save="1" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="commission_percentage" attrs="{'invisible': [('reseller_id', '=', False)]}" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>