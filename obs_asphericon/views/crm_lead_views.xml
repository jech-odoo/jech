<odoo>
    <data>
        <record id="view_crm_lead_form_asphericon_crm" model="ir.ui.view">
            <field name="name">crm.lead.view.form.asphericon.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='lead']/group/group" position="inside">
                    <field name="industry_id" />
                </xpath>
                <xpath expr="//field[@name='lang_id']" position="after">
                    <field name="industry_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>