<odoo>
    <data>
        <record id="view_crm_lead_form_obs_opportunity" model="ir.ui.view">
            <field name="name">crm.lead.view.form.asphericon.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="before">
                    <label for="project_ids"/>
                    <div class="o_row">
                        <field name="project_ids" options="{'no_create': True, 'no_edit': True}" widget="many2many_tags"/>
                        <button string="Create" type="object" name="action_open_create_project" attrs="{'invisible':[('project_ids', '!=', [])]}" groups="project.group_project_manager"/>
                    </div>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_open_projects" string="Project Overview" type="object" class="oe_stat_button" groups="project.group_project_manager" icon="fa-puzzle-piece" attrs="{'invisible': [('project_ids', '=', [])]}">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>