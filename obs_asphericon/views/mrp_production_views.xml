<odoo>
    <data>
        <record id="mrp_production_form_view_inherited_obs" model="ir.ui.view">
            <field name="name">mrp.production.view.inherited.obs</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object"
                        name="action_view_analytic_account"
                        string="Analytic Account" icon="fa-bar-chart-o"
                        attrs="{'invisible': ['|', ('analytic_account_id', '=', False), ('state', 'in', ['draft', 'cancel'])]}"
                        />
                </xpath>
                <xpath expr="//page[@name='miscellaneous']//field[@name='date_deadline']" position="after">
                    <field name="analytic_account_id" attrs="{'readonly': [('state','!=','draft')]}" groups="analytic.group_analytic_accounting"/>
                    <field name="is_cost_calculated" groups="mrp.group_mrp_manager"/>
                </xpath>
                <xpath expr="//page[@name='miscellaneous']//field[@name='date_deadline']" position="replace">
                </xpath>
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="date_deadline" readonly="0" invisible="0"
                        decoration-warning="state not in ('done', 'cancel') and date_deadline &lt; now"
                        decoration-danger="state not in ('done', 'cancel') and date_deadline &lt; current_date"
                        decoration-bf="state not in ('done', 'cancel') and (date_deadline &lt;current_date or date_deadline &lt; now)"/>
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="restrict_partner_id" groups="stock.group_tracking_owner"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_tags" readonly="1" widget="many2many_tags" attrs="{'invisible':[('product_tags','=',[])]}" options="{'color_field': 'color'}"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="date_planned_finished"
                        decoration-warning="state not in ('done', 'cancel') and date_planned_finished &lt; now"
                        decoration-danger="state not in ('done', 'cancel') and date_planned_finished &lt; current_date"
                        decoration-bf="state not in ('done', 'cancel') and (date_planned_finished &lt; current_date or date_planned_finished &lt; now)"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <field name="project_count" invisible="1" />
                    <button name="action_open_projects" string="Project Overview" type="object" class="oe_stat_button" groups="project.group_project_manager" icon="fa-puzzle-piece" attrs="{'invisible': [('project_count', '=', 0)]}"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_tree_view_obs_asph" model="ir.ui.view">
            <field name="name">mrp.production.tree.inherited.obs.asph</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_tags" widget="many2many_tags" optional="show" options="{'color_field': 'color'}"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="date_planned_finished" optional="show"
                        decoration-warning="state not in ('done', 'cancel') and date_planned_finished &lt; now"
                        decoration-danger="state not in ('done', 'cancel') and date_planned_finished &lt; current_date"
                        decoration-bf="state not in ('done', 'cancel') and (date_planned_finished &lt;current_date or date_planned_finished &lt; now)"/>
                </xpath>
                <xpath expr="//field[@name='date_planned_start']"
                       position="attributes">
                    <attribute name="decoration-warning">state not in ('done', 'cancel') and date_planned_start &lt; now</attribute>
                    <attribute name="decoration-danger">state not in ('done', 'cancel') and date_planned_start &lt; current_date</attribute>
                    <attribute name="decoration-bf">state not in ('done', 'cancel') and (date_planned_start &lt;current_date or date_planned_start &lt; now)</attribute>
                    <attribute name="widget"></attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']"
                       position="attributes">
                    <attribute name="decoration-warning">state not in ('done', 'cancel') and date_deadline &lt; now</attribute>
                    <attribute name="decoration-danger">state not in ('done', 'cancel') and date_deadline &lt; current_date</attribute>
                    <attribute name="decoration-bf">state not in ('done', 'cancel') and (date_deadline &lt;current_date or date_deadline &lt; now)</attribute>
                    <attribute name="widget"></attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
