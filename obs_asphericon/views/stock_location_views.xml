<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_location_form_inherit_obs" model="ir.ui.view">
        <field name="name">stock.location.view.form.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='removal_strategy_id']" position="after">
                <field name="is_saleable_quantities" attrs="{'invisible': [('usage', '!=', 'internal')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
