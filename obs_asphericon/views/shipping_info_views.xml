<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shippint_info_tree" model="ir.ui.view">
        <field name="name">shipping.info.tree</field>
        <field name="model">shipping.info</field>
        <field name="arch" type="xml">
            <tree string="Shipping Infos" editable="top">
                <field name="name" required="1"/>
                <field name="number"/>
            </tree>
        </field>
    </record>
    <record id="action_shipping_infos" model="ir.actions.act_window">
        <field name="name">Shipping Info</field>
        <field name="res_model">shipping.info</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create new shipping info record
          </p>
        </field>
    </record>
    <menuitem
            id="shipping_info_menu_sales"
            name="Shipping Infos"
            action="obs_asphericon.action_shipping_infos"
            parent="sale.menu_sales_config"/>
    <menuitem
            id="shipping_info_menu_delivery"
            name="Shipping Infos"
            action="obs_asphericon.action_shipping_infos"
            parent="delivery.menu_delivery"/>
</odoo>