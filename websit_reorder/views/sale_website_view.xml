<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <template id="sale_order_poratl_template_id" inherit_id="sale.portal_my_orders">

        <xpath expr="//tr/th[4]" position="after">
            <th class="text-right">Reorder</th>
        </xpath>

        <xpath expr="//tr/td[4]" position="after">
            <td class="text-right">
                <a t-att-href="'/reorder_website?order_id=%s' % order.id" role="button" class="btn btn-primary" >
                    Reorder
                </a>   
            </td>
        </xpath>

    </template>
</odoo>