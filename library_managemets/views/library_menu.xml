<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="student_property_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">student.master</field>
        <field name="view_mode">tree,form</field>
    </record>

     <record id="book_property_action" model="ir.actions.act_window">
        <field name="name">Book</field>
        <field name="res_model">book.master</field>
        <field name="view_mode">tree,form</field>
    </record>

     <record id="author_property_action" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="res_model">author.master</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="student_menu_root" name="Library Managements"/>

    <menuitem id="student_first_level_menu" name="Record" parent="student_menu_root"/>
    <menuitem id="student_model_menu_action" parent="student_first_level_menu" action="student_property_action"/> 

     <menuitem id="student_book_level_menu" name="Book" parent="student_menu_root"/>
    <menuitem id="student_book_model_menu_action" parent="student_first_level_menu" action="book_property_action"/> 

    <menuitem id="student_author_level_menu" name="Author" parent="student_menu_root"/>
    <menuitem id="student_author_model_menu_action" parent="student_first_level_menu" action="author_property_action"/> 

</odoo>
