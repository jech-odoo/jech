<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_stock_rule_form_inherit_stock_location" model="ir.ui.view">
        <field name="name">stock.move.operations.form.inherit.stock.location</field>
        <field name="model">stock.rule</field>
        <field name="inherit_id" ref="stock.view_stock_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='procure_method']" position="after">
                <field name="demand_location_id" attrs="{'invisible': [('procure_method','!=', 'mts_else_mto')]}"/>
            </xpath>
        </field>
    </record>
</odoo>

