<?xml version='1.0' encoding='utf-8'?>

<odoo>

  <!-- start action..... -->
	<record model="ir.actions.server" id="start_action">
		<field name="name">Start</field>
		<field name="model_id" ref="mrp_workorder.model_mrp_workorder"/>
		<field name="binding_model_id" ref="mrp_workorder.model_mrp_workorder"/>
		<field name="binding_view_types">list</field>
		<field name="state">code</field>
		<field name="code">
			for record in records:
				record.button_start()
		</field>
    </record>	

	<!-- stop action..... -->
	<record model="ir.actions.server" id="stop_action">
		<field name="name">Stop</field>
		<field name="model_id" ref="mrp_workorder.model_mrp_workorder"/>
		<field name="binding_model_id" ref="mrp_workorder.model_mrp_workorder"/>
		<field name="state">code</field>
		<field name="code">
				for record in records:
					record.button_pending()
		</field>
    </record>	

</odoo>