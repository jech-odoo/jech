<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_stock_account_validate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.account_validate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_lot_on_invoice']" position="after">

                <div class="o_setting_left_pane">
                    <br/>
                    <field name="ids_scrape"/>
                </div>
                <div>
                    <div class="o_setting_right_pane">
                        <br/>
                        <label for="ids_scrape"/>
                        <div class="text-muted">
                             Can Validate Scrape order
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>