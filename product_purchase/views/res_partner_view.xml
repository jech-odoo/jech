<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_partner_form_inherited_product_purchaes" model="ir.ui.view">
        <field name="name">view.partner.form.inherited.product.purchaes</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='internal_notes']" position="after">
                <page name="inventory" string="Inventory">
                    <field name="product_uom_detail_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="uom_id" />
                            <field name="uom_category"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>



