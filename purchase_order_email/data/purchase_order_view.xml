<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>


        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'purchase'), ('name', '=', 'email_template_edi_purchase_done')]" />
            </function>
            <value eval="{'noupdate': False}" />
        </function>

        <record id="purchase.email_template_edi_purchase_done" model="mail.template">
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
Dear Bear
                        <t t-out="object.partner_id.name or ''">Brandon Freeman</t>
                        <t t-if="object.partner_id.parent_id">
(
                            <t t-out="object.partner_id.parent_id.name or ''">Azure Interior</t>
)
                        </t>
                        <br/>
                        <br/>
Here is in attachment a purchase order
                        <strong t-out="object.name or ''">P00015</strong>
                        <t t-if="object.partner_ref">
with reference:
                            <t t-out="object.partner_ref or ''">REF_XXX</t>
                        </t>
amounting in
                        <strong t-out="format_amount(object.amount_total, object.currency_id) or ''">$ 10.00</strong>
from
                        <t t-out="object.company_id.name or ''">YourCompany</t>
.
                        <br/>
                        <br/>
                        <t t-if="object.date_planned">
The receipt is expected for
                            <strong t-out="format_date(object.date_planned) or ''">05/05/2021</strong>
.
                            <br/>
                            <br/>
Could you please acknowledge the receipt of this order?
                        </t>
                        <br/>
                        <br/>
                        
                        <t t-set='total' t-value='0'/>
                         
                        <t t-foreach="object.order_line" t-as="line">
                            <t t-set='total' t-value='total+line.price_tax'/>
                        </t>
                        taxes issssss <strong t-out="'%.2f' % total"/>
                      <!-- / <strong t-out="format_amount(total, object.currency_id)"/> -->
                      
                    </p>
                </div>
            </field>

        </record>
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'purchase'), ('name', '=', 'email_template_edi_purchase_done')]" />
            </function>
            <value eval="{'noupdate': True}" />
        </function>

    </data>
</odoo>